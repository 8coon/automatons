{
  "name": "automatons",
  "version": "0.0.4",
  "description": "Side effect management library based on finite state machines",
  "main": "dist/automatons.cjs.js",
  "scripts": {
    "test": "jest --coverage",
    "build": "rm -rf lib/ && tsc && rollup --config rollup.config.js",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "fix": "npm run lint -- --fix",
    "docs": "typedoc --name Automatons --readme none --theme minimal --out docs/ --mode file src/",
    "prepublishOnly": "npm run lint && npm run build && npm test",
    "commit": "git-cz"
  },
  "keywords": [
    "side-effect",
    "state-management",
    "react",
    "finite-state-machine",
    "fsm"
  ],
  "author": "Kaibito Young",
  "license": "MIT",
  "repository": "https://github.com/8coon/automatons",
  "files": [
    "dist",
    "lib"
  ],
  "types": "lib/index.d.ts",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run build && npm test"
    }
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.10",
    "@types/react": "^16.9.46",
    "@types/react-test-renderer": "^16.9.3",
    "cz-conventional-changelog": "^3.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.3",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "react": "^16.7.0",
    "react-dom": "^16.13.1",
    "rollup": "^2.26.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "ts-jest": "^26.2.0",
    "tslib": "^2.0.1",
    "tslint": "^6.1.3",
    "typedoc": "^0.18.0",
    "typescript": "^3.9.7"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "dependencies": {},
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
